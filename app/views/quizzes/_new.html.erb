<div id="quiz-main-info">
	<%= f.file_field :image, :id => "quiz-image-input" %>
	<img id="quiz-image-preview" class="image-preview" src="<%= @quiz.image_url(:item_thumbnail) if @quiz %>" alt="preview failed to load" class="hidden" /> 
	<div class="image-input-overlay">
		Click to Add Image
	</div>
	
	<div id="quiz-text-info">
		<div class="char-countable">
			<%= f.text_field :title, :class => "btn", placeholder: "Title", maxlength: 80 %>
			<p class="char-count single-row">80</p>
		</div>
		
		<%= f.text_area :description, :class => "btn", placeholder: "Description" %>
	</div>
</div>