<div class="content-container main-container no-banner">
	<h1 class="page-title">TRENDING</h1>
	<div class="quizzes-content">
	 	<div id="main-content">
		 	<div class="quizzes-section list-view">
		 		<% @quizzes.each do |quiz| %>
		 			<%= link_to quiz_path(quiz) do %>
			 			<div class="quiz-list-item">
			 				<div class="quiz-image img" style="background-image: url(<%= image_url(quiz.image_url) %>)"></div>
			 				<div class="quiz-info">
			 					<div class="quiz-title"><%= quiz.title %></div>
			 					<div class="quiz-sub-info">
			 						<div class="quiz-user">
			 							<%= image_tag profile_pic(quiz.user) %>
			 							<p><%= quiz.user.name %></p>
			 						</div>
			 						<div class="quiz-type"><%= quiz.quiz_type.upcase %></div>
			 					</div>
			 				</div>
			 			</div>
			 		<% end %>
		 		<% end %>
		 		<div id="page-controls">
		 			<%= link_to params.permit(:page).merge(:page => @page - 1) do %>
		 				<% if @page > 1 %>
		 					<div class="page-prev page-btn btn"><p>Previous</p></div>
		 				<% end %>
		 			<% end %>
		 			<p class="page-number">Page <%= @page %></p>
		 			<%= link_to params.permit(:page).merge(:page => @page + 1) do %>
		 				<% unless @last_page %>
		 					<div class="page-next page-btn btn"><p>Next</p></div>
		 				<% end %>
		 			<% end %>
		 		</div>
		 		<div id="bottom-ad">
		 			<script id="mNCC" language="javascript">
		 				$(document).on('turbolinks:load', function() {
		 					medianet_width = "728";
						   medianet_height = "90";
						   medianet_crid = "121681831";
						   medianet_versionId = "111299";
						   (function() {
						       var isSSL = 'https:' == document.location.protocol;
						       var mnSrc = (isSSL ? 'https:' : 'http:') + '//contextual.media.net/nmedianet.js?cid=8CUSWN36E' + (isSSL ? '&https=1' : '');
						       document.write('<scr' + 'ipt type="text/javascript" id="mNSC" src="' + mnSrc + '"></scr' + 'ipt>');
						    })();
		 				})	   
					</script>
		 		</div>
		 	</div>
		 	<div class="side-content">
				<div id="ad1" class="side-ad"></div>
			</div>
		 </div>
	 </div>
</div>
