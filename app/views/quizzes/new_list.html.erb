<div class="content-container quiz-form-container list-quiz">
	<h1 class="super-bold">Create a New List</h1>

	<%= form_for Quiz.new do |f| %>
		<%= f.hidden_field :quiz_type, value: "list" %>
		<%= render partial: "new", locals: {f: f} %>

		<h2 class="super-bold content-title">Add Items</h2>
		<div class="form-box question">
			<%= hidden_field_tag "quiz_item_1[order]", 1, :class => "item-order" %>
			<%= image_tag "up-arrow.svg", :class => "move-question move-up" %>
			<%= image_tag "down-arrow.svg", :class => "move-question move-down" %>
			<%= image_tag "close-box.svg", :class => "close-question closer" %>
			<h3 class=" question-number">Item <p>1</p></h3>
			<class class="box-field ">
				<label class="box-label">Title</label>
				<%= text_field_tag "quiz_item_1[title]", nil, :class => "box-input question-text" %>
			</class>
			<class class="box-field ">
				<label class="box-label">Image</label>
				<%= image_tag "close-box.svg", :class => "close-image closer" %>
				<%= file_field_tag "quiz_item_1[image]", :class => "question-image-input" %>
				<div class="question-image-preview image-preview" src="#" alt="preview failed to load"></div>
				<div class="box-input question-image-input">Click to add image...</div>
			</class>
			<class class="box-field ">
				<label class="box-label">Image Credit</label>
				<%= text_field_tag "quiz_item_1[image_credit]", nil, :class => "box-input" %>
			</class>
			<class class="box-field ">
				<label class="box-label">Description</label>
				<%= text_area_tag "quiz_item_1[item_text]", nil, :class => "box-input item-description" %>
			</class>
		</div>
		<div id="add-question" class="btn">
			Add Item
		</div>

		<%= render partial: "submit_bar", locals: {f: f} %>
	<% end %>
</div>
<div id="mobile-container">
    <p>Access this page on a larger screen to create quizzes!</p>
    <%= link_to root_path do %>
        <div class="btn">Take Me Home!</div>
    <% end %>
</div>