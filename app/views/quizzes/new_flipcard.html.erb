<div class="content-container quiz-form-container flipcard-quiz">
	<h1 class="super-bold">Create a New Flip Card</h1>

	<%= form_for Quiz.new do |f| %>
		<%= f.hidden_field :quiz_type, value: "flipcard" %>
		<%= render partial: "new", locals: {f: f} %>
		
		<h2 class="super-bold content-title">Add A Flip Card</h2>
			<div class="form-box question">
				<%= hidden_field_tag "quiz_item_1[order]", 1, :class => "item-order" %>
				<%= image_tag "up-arrow.svg", :class => "move-question move-up" %>
				<%= image_tag "down-arrow.svg", :class => "move-question move-down" %>
				<%= image_tag "close-box.svg", :class => "close-question closer" %>
				<h3 class="question-number">Flip Card <p>1</p></h3>
				<div class="box-field">
					<div class="choose-front side-chooser btn selected">Front</div>
					<div class="choose-back side-chooser btn">Back</div>
				</div>

				<div class="box-field">
					<label class="box-label">Card Title</label>
					<div class="char-countable">
						<p class="char-count left single-row">90</p>
						<%= text_field_tag "quiz_item_1[title]", nil, :class => "box-input", maxlength: 90 %>
					</div>
					
				</div>
				<div class="box-field">
					<label class="box-label">Card Image</label>
					<div class="flip-container">
						<div class="flipper">
							<% ["front", "back"].each do |side| %>
								<div class="<%= side %>">
									<div class="<%= side %>-side card-side shown">
										<div class="box-input question-image-input">
											<p class="char-count">120</p>
											<div class="add-card-text">Add Text</div>
											<div class="text-box" maxlength="120">
											</div>
			
											<%= hidden_field_tag "quiz_item_1[item_text#{side == 'back' ? '_back' : nil}]", nil, :class => "card-text-input question-text" %>
											<div class="background-edit-container">
												<div class="colors-container">
													<p>Choose Background Color</p>
													<div class="colors">
														<div class="color" style="background-color: #1e5efd;"></div>
														<div class="color" style="background-color: #00cf7b;"></div>
														<div class="color" style="background-color: #8d1cd9;"></div>
														<div class="color" style="background-color: #ee4a7f;"></div>
														<div class="color" style="background-color: #ea8408;"></div>
													</div>
													<%= hidden_field_tag "quiz_item_1[color#{side == 'back' ? '_back' : nil}]", "rgb(30, 94, 253)", :class => "card-color-input" %>
												</div>
												<div class="or">Or</div>
												<div class="card-image-input-btn">
													Add Image
												</div>
											</div>
											<%= image_tag "close-box.svg", :class => "close-image closer" %>
											<%= file_field_tag "quiz_item_1[image#{side == 'back' ? '_back' : nil}]", :class => "question-image-input" %>
											<div class="question-image-preview image-preview" src="#" alt="preview failed to load"></div>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>			
				<div class="box-field ">
					<label class="box-label">Image Credit</label>
					<%= text_field_tag "quiz_item_1[image_credit]", nil, :class => "box-input" %>
				</div>
			</div>
		<div id="add-question" class="btn">
			Add Card
		</div>

		<%= f.text_area :completion_message, :class => "btn", placeholder: "Completion Message..." %>
		<%= render partial: "submit_bar", locals: {f: f} %>
	<% end %>
</div>

<div id="mobile-container">
    <p>Access this page on a larger screen to create quizzes!</p>
    <%= link_to root_path do %>
        <div class="btn">Take Me Home!</div>
    <% end %>
</div>

